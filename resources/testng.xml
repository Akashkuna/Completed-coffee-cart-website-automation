<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Coffee Cart Test Suite" parallel="tests" thread-count="2">
  <parameter name="browser" value="chrome"/>
  <test name="Chrome Tests">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="com.coffeecart.tests.MenuTests"/>
      <class name="com.coffeecart.tests.CartTests"/>
      <class name="com.coffeecart.tests.CheckoutTests"/>
    </classes>
  </test>
  <test name="Firefox Tests">
    <parameter name="browser" value="firefox"/>
    <classes>
      <class name="com.coffeecart.tests.MenuTests"/>
      <class name="com.coffeecart.tests.CartTests"/>
    </classes>
  </test>
  <test name="Demo Failure Tests">
    <classes>
      <class name="com.coffeecart.tests.FailureTests"/>
    </classes>
  </test>
</suite>
